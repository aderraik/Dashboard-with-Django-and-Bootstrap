{
  "editor.formatOnSave": true,
  "files.exclude": {
    ".envrc": true,
    "**/__pycache__": true,
    "db.sqlite3": true,
    ".editorconfig": true,
    "debug.log": true
  },
  "files.associations": {
    "**/templates/**/*.html": "django-html",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "python.pythonPath": ".env/python/bin/python"
}